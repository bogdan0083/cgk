//- title: Index Page
extends layouts/_layout
block head
  - var title = 'Popups'
  - var n = 0
  - var i = 0
  - var servicesTextArr = ['Технический <br/> план', 'Межевой<br/>план', 'Акт<br/> обследования', 'Выписки<br/> из ЕГРН', 'Геодезическая<br/> съемка и обмеры', 'Схема расположения<br/>земельного участка', 'Исправление<br/> реестровых ошибок', 'Проектная<br/> документация', ' Кадастровый учет<br/> и регистрация прав', 'Юридические<br/> услуги']
  - var worktypesTextArr = ['Земельные <br/> участки', 'Здания <br/> и сооружения', 'Нежилые <br/> помещения', 'Квартиры <br/> и комнаты',  'Юридические <br/> услуги']
block header
  - var headerInner = true
  - var active = 3
block content
  // start layout
  .layout.layout-contact
    .contact-inner
      .container
        h1.layout-heading Контакты
        // start contact-group
        .contact-group
          .row
            .col-xs-12.col-sm-4.col-md-4
              .contact-item
                .icon
                  include data/phonecall.svg
                h3 Телефон
                p Тел: +7 (495) 643 85 88
                p Моб.: +7 (903) 744 42 49
            .col-xs-12.col-sm-4.col-md-4
              .contact-item
                .icon
                  include data/marker.svg
                h3 Адрес
                p 119021 г. Москва,
                p Фрунзенская наб., д. 8
            .col-xs-12.col-sm-4.col-md-4
              .contact-item
                .icon
                  include data/envelope.svg
                h3 E-mail
                p: a.mail(href="mailto:info@cntgeo.ru") info@cntgeo.ru
                p Часы работы: Пн-Пт:  9:00-18:00
        // end contact-group
        .requisites.js-requisites
          ul.requisites-list
            li ООО «Центр геодезии и кадастра»
            li ОГРН 1157746938975
            li ИНН 9715222079
            li КПП 771501001
            li р/с 40702810102740001165
            li АО «Альфа-Банк», 107078, г. Москва, ул. Каланчевская, д. 27
        .button.button-long.button-text-centered.js-requisites-toggle
          span Банковские реквизиты
          span.icon
            img(src="images/arr-down.png" alt="")
  // end layout
  // start map-wrapper
  .map-wrapper.map-wrapper-large
    .google-map#map
  // end map-wrapper
  // start order-action
  section.order-action 
    .container
      h2.section-heading(data-aos="fade-up" data-aos-anchor=".order-action") Оставить заявку      
      p(data-aos="fade-up" data-aos-delay="400" data-aos-anchor=".order-action") Отправьте заявку и получите бесплатную консультацию в течение 2 минут 
      form.order-action-form
        .row
          .col-xs-12.col-sm-12.col-md-12
            .input-wrap(data-aos="fade-up" data-aos-delay="700" data-aos-anchor=".order-action")
              .js-input-placeholder 
                span Имя
              input.input-centered.js-input(type="text" name="user.name" data-aos-anchor=".order-action")
          .col-xs-6.col-sm-6.col-md-6
            .input-wrap(data-aos="fade-up" data-aos-delay="800" data-aos-anchor=".order-action")
              .js-input-placeholder
                span Email
              input.input-centered.js-input(type="text" name="user.email" data-aos-anchor=".order-action")
          .col-xs-6.col-sm-6.col-md-6
            .input-wrap(data-aos="fade-up" data-aos-delay="900" data-aos-anchor=".order-action")
              .js-input-placeholder
                span Телефон
              input.input-centered.js-input(type="text" name="user.phone" data-aos-anchor=".order-action")
          .col-xs-12.col-sm-12.col-md-12
            .input-wrap.input-wrap-textarea(data-aos="fade-up" data-aos-delay="1000" data-aos-anchor=".order-action")
              .js-input-placeholder
                span Сообщение
              textarea.input-centered.input-centered-textarea.js-input(name="user.message" data-aos-anchor=".order-action")
        button.button.button-white(data-aos="fade-up" data-aos-delay="1100" data-aos-anchor=".order-action")
          span Отправить
          span.icon
            include data/envelope.svg
  // end order-action
  // start worktypes
  section.worktypes
    .container
      .worktypes-group
        while i < 5
          a.worktypes-item(href="#" data-aos="fade-up" data-aos-anchor=".services" data-aos-duration="600" data-aos-delay=(i * 300))
            .icon
              img(src='images/worktype-icon' + (i + 1) +'.png' alt="Типы работ " + i)
            p.text!= worktypesTextArr[i]
          - i++
  // end worktypes
